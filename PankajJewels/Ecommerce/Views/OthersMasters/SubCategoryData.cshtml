@model Ecommerce.Models.Entity.SubCategoryMasterEntity
@{
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Add-Edit Sub Category Master</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <div class="row">
                            <h4>Sub Category Master</h4>
                            <p>Master data management</p>
                            <a href="~/OthersMasters/SubCategories"><h5 class="pull-right">Back to list</h5></a>
                        </div>

                    </div>
                    <div class="tab-inn">
                        <form action="~/OthersMasters/SubCategoryData" method="post">
                            @Html.HiddenFor(b => b.SubCategoryId)
                            <div class="row">
                                <div class="input-field col s4">
                                    @Html.TextBoxFor(a => a.SubCategoryName, null, new { @class = "validate", @placeholder = "Sub Category Name" })
                                    @Html.ValidationMessageFor(b => b.SubCategoryName, null, new { @class = "text-danger" })
                                </div>
                                <div class="input-field col s4">
                                    @Html.TextBoxFor(a => a.SubCategoryCode, null, new { @class = "validate", @placeholder = "Category Code" })
                                    @Html.ValidationMessageFor(b => b.SubCategoryCode, null, new { @class = "text-danger" })
                                </div>
                                <div class="input-field col s4">
                                    <select id="CategoryId" name="CategoryId">
                                        @foreach (var v in ViewBag.catid)
                                        {
                                            if (ViewBag.currentcatid == v.CategoryId)
                                            {
                                                <option value="@v.CategoryId" selected>@v.CategoryName</option>
                                            }
                                            else
                                            {
                                                <option value="@v.CategoryId">@v.CategoryName</option>
                                            }
                                        }
                                    </select>
                                </div>

                            </div>
                             
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="waves-effect waves-light btn-large waves-input-wrapper" style=""><input type="submit" class="waves-button-input"></i>
                                </div>
                            </div>
                            <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>