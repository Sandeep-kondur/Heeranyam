<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding loginBanner">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
                <!-- Login Content Start -->
                <div class="offset-md-6 col-lg-6">
                    <div class="login-reg-form-wrap">
                        <h5>Enter your Email</h5>
                        <form action="~/Authenticate/ForgotPassword" method="post">
                            <div class="single-input-item">
                                <input type="email" placeholder="Email or Username" required name="emailid" />
                                @Html.ValidationMessageFor(a => a.emailId, null, new { @class = "text-danger" })

                            </div>
                            <div class="single-input-item">
                                <button class="btn btn-sqr">Reset</button>
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <div class="remember-meta">
                                        <a href="~/Authenticate/Register" class="forget-pwd">Don't have an account? Register</a>
                                    </div>
                                    <a href="~/Authenticate/Login" class="forget-pwd">Login?</a>
                                </div>
                            </div>

                            <div class="single-input-item">

                                <span class="text-danger">@ViewBag.ErrorMessage</span>
                            </div>
                        </form>
                    </div>
                </div>
