@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<!-- breadcrumb area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap">
                    <nav aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Home/Index"><i class="fa fa-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page">login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding loginBanner">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
                <!-- Login Content Start -->
                <div class="offset-md-6 col-lg-6">
                    <div class="login-reg-form-wrap">
                        <h5>Password reset success!</h5>
                        <form action="#" method="post">

                            <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <a href="~/Authenticate/Login" class="forget-pwd">Login Now</a>
                                </div>
                            </div>
                            <div class="single-input-item">

                                <span class="text-danger">@ViewBag.ErrorMessage</span>
                            </div>
                            <div class="single-input-item">

                                <br />
                                <br /><br /><br /><br /><br /><br /><br />

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- login register wrapper end -->